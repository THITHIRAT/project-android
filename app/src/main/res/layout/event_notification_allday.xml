<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorwhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/event_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:text="Notification"
        android:textAlignment="center"
        android:textColor="@color/colornavy"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_notification"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Date"
        android:textColor="@color/colornavy"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Select Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/colornavy" />


    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date"
        android:layout_marginLeft="25dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Time"
        android:textColor="@color/colornavy"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/time"
        android:layout_alignBottom="@+id/time"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Select Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/colornavy" />

    <Button
        android:id="@+id/done_notification"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/event_notification"
        android:layout_alignRight="@+id/event_notification"
        android:layout_below="@+id/time"
        android:background="@drawable/button_radius"
        android:text="SAVE"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/colorwhite"
        android:textSize="14sp" />

    <Button
        android:id="@+id/back_notification"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/done_notification"
        android:layout_alignStart="@+id/done_notification"
        android:layout_below="@+id/done_notification"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_radius"
        android:text="CLOSE"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/colorwhite"
        android:textSize="14sp" />

</RelativeLayout>