<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@color/colorwhite">

    <TextView
        android:id="@+id/Warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Warning"
        android:textColor="@color/colornavy"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_taskname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Warning"
        android:layout_alignStart="@+id/Warning"
        android:layout_below="@+id/Warning"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:paddingLeft="5dp"
        android:text="Taskname"
        android:textColor="@color/colornavy"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Warning"
        android:layout_alignStart="@+id/Warning"
        android:layout_below="@+id/tv_taskname"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:text="Start Date"
        android:textColor="@color/colornavy"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Warning"
        android:layout_alignStart="@+id/Warning"
        android:layout_below="@+id/tv_start"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:text="End Date"
        android:textColor="@color/colornavy"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Warning"
        android:layout_alignStart="@+id/Warning"
        android:layout_below="@+id/tv_end"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:text="Location"
        android:textColor="@color/colornavy"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_location"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:text="save"
        android:textColor="@color/colordarkblue" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_location"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/ok"
        android:layout_toStartOf="@+id/ok"
        android:background="@null"
        android:text="cancel"
        android:textColor="@color/colorred" />

</RelativeLayout>