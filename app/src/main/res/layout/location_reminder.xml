<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_radius_darkwhite"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/lc_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="Name"
        android:textColor="@color/colordarkblue"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lc_type_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lc_task_name"
        android:layout_marginLeft="50dp"
        android:paddingEnd="10dp"
        android:text="Notification"
        android:textAlignment="textStart"
        android:textColor="@color/colorred"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/lc_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lc_type_noti"
        android:layout_alignBottom="@+id/lc_type_noti"
        android:layout_toEndOf="@+id/lc_type_noti"
        android:layout_toRightOf="@+id/lc_type_noti"
        android:text="PlaceName"
        android:textColor="@color/colorred"
        android:textSize="14dp" />

    <CheckBox
        android:id="@+id/lc_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lc_type_noti"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:buttonTint="@color/colornavy" />

</RelativeLayout>