<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.thithirat.test.MainSettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:subtitleTextAppearance="@color/colornavy"
            app:subtitleTextColor="@color/colornavy" />

        <RelativeLayout
            android:id="@+id/layout_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@color/colorwhite">


            <ImageView
                android:id="@+id/img_user"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="20dp"
                android:src="@mipmap/ic_launcher_navy_round" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_user"
                android:layout_centerHorizontal="true"
                android:padding="0dp"
                android:text="Android Studio"
                android:textColor="@color/colornavy"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="android.studio@android.com"
                android:textColor="@color/colornavy" />

            <Button
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorwhite"
                android:drawableLeft="@drawable/ic_action_name_navy"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_go_navy"
                android:elevation="2dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="My Account"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/colornavy" />

            <Button
                android:id="@+id/edit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_account"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="0dp"
                android:background="@color/colorwhite"
                android:drawableLeft="@drawable/ic_action_location"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_go_navy"
                android:elevation="2dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="My Location"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:textColor="@color/colornavy" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

</FrameLayout>
